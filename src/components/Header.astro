---
import Burger from "@assets/icons-astro/Burger.astro";
import Button from "./Button.astro";

const Links = [
  { id: "home", label: "Inicio", to: "#home" },
  { id: "about_me", label: "Sobre mi", to: "#about_me" },
  { id: "projects", label: "Proyectos", to: "#projects" },
  { id: "technologies", label: "Tecnolog√≠as", to: "#technologies" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="max-w-5xl mx-auto px-6 py-4">
    <div
      class="flex justify-between items-center bg-black/30 backdrop-blur-lg rounded-full px-8 py-3 ring-1 ring-white/10"
    >
      <a
        href="#home"
        class="text-xl font-bold tracking-tighter text-white hover:text-theme-primary transition-colors cursor-pointer interactive"
      >
        AJ
      </a>
      <ul class="hidden lg:flex space-x-8">
        {
          Links.map((link) => (
            <li>
              <a
                href={link.to}
                class="nav-link text-gray-300 hover:text-theme-primary transition-colors cursor-pointer interactive"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
      <a href="#contact" class="hidden nav-link">
        <Button variant="primary" class="font-medium">Contactame</Button>
      </a>
      <Burger fill="#"/>
    </div>
  </nav>
</header>
