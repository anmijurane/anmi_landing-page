---
import type { HTMLAttributes } from "astro/types";

type Variant = "primary" | "secondary" | "tertiary";
type Size = "sm" | "md" | "lg" | "xl";

interface Props extends HTMLAttributes<"button"> {
  variant?: Variant;
  size?: Size;
  href?: string;
}

const {
  variant = "primary",
  size = "md",
  href,
  class: classList,
  ...rest
} = Astro.props;

const sizeClasses: Record<Size, string> = {
  sm: "px-4 py-1.5 text-sm",
  md: "px-5 py-2 text-base",
  lg: "px-6 py-2.5 text-lg",
  xl: "px-8 py-3 text-xl",
};

const variantClasses: Record<Variant, string> = {
  primary:
    "bg-theme-primary text-zinc-700 font-base hover:bg-theme-primary/90",
  secondary:
    "bg-transparent border-2 border-white/20 text-white hover:bg-white/10 hover:border-white/40",
  tertiary: "bg-transparent text-theme-primary hover:underline",
};
---

<button
  {...rest}
  class="inline-block rounded-full cursor-pointer transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-theme-primary/50"
  class:list={{
    [sizeClasses[size]]: true,
    [variantClasses[variant]]: true,
    [`${classList}`]: !!classList,
  }}
>
  <slot />
</button>
